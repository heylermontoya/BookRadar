@model List<BookRadar.Models.BusquedaLibro>

<h2>Historial de búsquedas</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Autor</th>
            <th>Título</th>
            <th>Año</th>
            <th>Editorial</th>
            <th>Fecha de consulta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Autor</td>
                <td>@item.Titulo</td>
                <td>@item.AnioPublicacion</td>
                <td>@item.Editorial</td>
                <td>@item.FechaConsulta.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
